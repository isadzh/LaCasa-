@model List<RecenzijaPrikazVM>

@{ 
    Layout = null;
    var RestoranID = TempData["RestoranID"];
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Opis</th>
            <th>Ocjena</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>

        @foreach (RecenzijaPrikazVM r in Model)
        {
        <tr>
            <td>@r.Opis</td>
            <td>@r.Ocjena</td>
            <td>
                <button class="btn btn-danger" onclick="ObrisiRecenziju(@r.RecenzijaID)">Obrisi</button>
            </td>
        </tr>
        }
    </tbody>
</table>
<button class=" btn btn-primary" onclick="DodajRecenziju(@RestoranID)">Dodaj Recenziju</button>

